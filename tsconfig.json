{
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "alwaysStrict": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "lib": [
      "ES2020"
    ],
    "typeRoots": [
      "./typings"
    ],
    "paths": {
      "tdesign-miniprogram/*": [
        "./miniprogram/miniprogram_npm/tdesign-miniprogram/*"
      ]
    },
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "strictBindCallApply": false
  },
  "include": [
    "./miniprogram/pages/**/*.ts",
    "./miniprogram/components/**/*.ts",
    "./miniprogram/package*/**/*.ts",
    "./typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_npm",
    "cloudfunctions",
    "miniprogram/utils"
  ]
}