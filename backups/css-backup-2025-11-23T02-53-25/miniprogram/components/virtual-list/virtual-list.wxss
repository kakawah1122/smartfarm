/* 虚拟列表容器 */
.virtual-list-container {
  width: 100%;
  position: relative;
  background: #f5f5f5;
}

/* 占位元素 */
.virtual-placeholder-top,
.virtual-placeholder-bottom {
  width: 100%;
}

/* 内容容器 */
.virtual-list-content {
  width: 100%;
}

/* 列表项 */
.virtual-list-item {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 加载更多提示 */
.virtual-loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}
