.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #ffffff;
  z-index: 99999;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.navbar-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  min-width: 100rpx;
  height: 100%;
  z-index: 100000;
  position: relative;
  pointer-events: auto;
  padding-left: 8rpx;
}

.back-button-area {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 80rpx;
  height: 100%;
  min-height: 80rpx;
  position: relative;
  cursor: pointer;
  /* 添加点击反馈 */
  transition: opacity 0.2s ease;
}

.back-button-area:active {
  opacity: 0.5;
}

.back-icon {
  font-size: 44rpx;
  color: #1a1a1a;
  font-weight: 300;
  line-height: 1;
  display: block;
  pointer-events: none;
  /* iOS风格：更细的笔触 */
  letter-spacing: -2rpx;
}

.navbar-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 24rpx;
  position: absolute;
  left: 0;
  right: 0;
  pointer-events: none;
}

.navbar-center-alone {
  justify-content: center;
  padding: 0 32rpx; }

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.2;
  letter-spacing: 0.5rpx;
}

.navbar-right {
  flex-shrink: 0;
  height: 100%;
}
