<!-- 新式导航栏组件 - 参照BOSS直聘设计 -->
<view class="custom-navbar" style="padding-top: {{statusBarHeight}}px;">
  <view class="navbar-content">
    <view class="navbar-left" wx:if="{{showBack}}" bind:tap="goBack">
      <view class="navbar-action-btn">
        <text class="navbar-action-icon">←</text>
      </view>
    </view>
    <text class="navbar-title">{{title}}</text>
    <view class="navbar-actions">
      <view class="navbar-action-btn" wx:if="{{showMenu}}" bind:tap="onMenuTap">
        <text class="navbar-action-icon">•••</text>
      </view>
      <view class="navbar-action-btn" wx:if="{{showRecord}}" bind:tap="onRecordTap">
        <text class="navbar-action-icon">⚫</text>
      </view>
    </view>
  </view>
</view>