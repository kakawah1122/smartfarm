<!-- 加载动画组件 -->
<view class="loading-animation {{type}}" wx:if="{{visible}}">
  <!-- 波浪加载动画 -->
  <block wx:if="{{type === 'wave'}}">
    <view class="wave-container">
      <view class="wave wave1"></view>
      <view class="wave wave2"></view>
      <view class="wave wave3"></view>
      <view class="wave wave4"></view>
      <view class="wave wave5"></view>
    </view>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </block>
  
  <!-- 脉冲加载动画 -->
  <block wx:elif="{{type === 'pulse'}}">
    <view class="pulse-container">
      <view class="pulse-circle pulse1"></view>
      <view class="pulse-circle pulse2"></view>
      <view class="pulse-circle pulse3"></view>
    </view>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </block>
  
  <!-- 旋转加载动画 -->
  <block wx:elif="{{type === 'spin'}}">
    <view class="spin-container">
      <view class="spinner"></view>
    </view>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </block>
  
  <!-- 点阵加载动画 -->
  <block wx:elif="{{type === 'dots'}}">
    <view class="dots-container">
      <view class="dot dot1"></view>
      <view class="dot dot2"></view>
      <view class="dot dot3"></view>
      <view class="dot dot4"></view>
      <view class="dot dot5"></view>
      <view class="dot dot6"></view>
      <view class="dot dot7"></view>
      <view class="dot dot8"></view>
      <view class="dot dot9"></view>
    </view>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </block>
  
  <!-- 渐变条加载动画 -->
  <block wx:elif="{{type === 'progress'}}">
    <view class="progress-container">
      <view class="progress-bar">
        <view class="progress-fill" style="width: {{progress}}%"></view>
      </view>
      <text class="progress-text">{{progress}}%</text>
    </view>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </block>
</view>
