<!-- 缓存监控组件 -->
<view class="cache-monitor" wx:if="{{showMonitor}}">
  <view class="monitor-header">
    <text class="monitor-title">缓存监控</text>
    <text class="monitor-close" bind:tap="onClose">×</text>
  </view>
  
  <view class="monitor-content">
    <!-- 统计概览 -->
    <view class="stats-overview">
      <view class="stat-item">
        <text class="stat-label">缓存项</text>
        <text class="stat-value">{{stats.totalItems}}</text>
      </view>
      <view class="stat-item">
        <text class="stat-label">总大小</text>
        <text class="stat-value">{{formattedSize}}</text>
      </view>
      <view class="stat-item">
        <text class="stat-label">命中率</text>
        <text class="stat-value">{{formattedHitRate}}</text>
      </view>
    </view>
    
    <!-- 详细统计 -->
    <view class="stats-detail">
      <view class="detail-row">
        <text class="detail-label">命中次数：</text>
        <text class="detail-value">{{stats.hitCount}}</text>
      </view>
      <view class="detail-row">
        <text class="detail-label">未命中次数：</text>
        <text class="detail-value">{{stats.missCount}}</text>
      </view>
      <view class="detail-row">
        <text class="detail-label">平均响应时间：</text>
        <text class="detail-value">{{stats.avgAccessTime}}ms</text>
      </view>
    </view>
    
    <!-- 操作按钮 -->
    <view class="monitor-actions">
      <button class="action-btn" bind:tap="onRefresh">刷新</button>
      <button class="action-btn danger" bind:tap="onClear">清空缓存</button>
    </view>
  </view>
</view>
