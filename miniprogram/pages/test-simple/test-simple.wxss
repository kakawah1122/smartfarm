.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.title {
  font-size: 60rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 30rpx;
}

.desc {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 60rpx;
  text-align: center;
  line-height: 1.6;
}

.info {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
}

