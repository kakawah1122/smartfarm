// health-utils.wxs - 健康管理页面辅助函数

/**
 * 获取任务类型名称
 */
function getTypeName(type) {
  var TYPE_NAMES = {
    'vaccine': '疫苗',
    'medication': '用药',
    'medicine': '用药',
    'nutrition': '营养',
    'disinfection': '消毒',
    'inspection': '巡检',
    'cleaning': '清洁',
    'feeding': '喂养',
    'care': '护理',
    'health': '检查',
    'other': '其他'
  }
  
  return TYPE_NAMES[type] || '其他'
}

/**
 * 计算日期
 */
function calculateDate(dayAge) {
  var today = getDate()
  var targetDate = getDate(today.getTime() + (dayAge - 1) * 24 * 60 * 60 * 1000)
  
  var month = targetDate.getMonth() + 1
  var day = targetDate.getDate()
  
  return (month < 10 ? '0' + month : month) + '/' + (day < 10 ? '0' + day : day)
}

module.exports = {
  getTypeName: getTypeName,
  calculateDate: calculateDate
}

