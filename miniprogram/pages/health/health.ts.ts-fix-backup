    // ä½¿ç”¨å¯¼èˆªç®¡ç†å™¨
    HealthNavigationManager.navigateToDiagnosisHistory()
  },

  /**
   * ç‚¹å‡»æ²»ç–—è®°å½•ï¼Œè·³è½¬åˆ°è¯¦æƒ…é¡µ
   */
  onTreatmentRecordTap(e: WechatMiniprogram.CustomEvent) {
