<!--help.wxml - 帮助中心页面-->
<view class="page-container">
  <!-- 导航栏 -->
  <navigation-bar 
    title="帮助中心"
    show-back="true"
    show-menu="false"
    bind:back="goBack"
  />
  
  <scroll-view class="scroll-container" scroll-y style="padding-top: {{totalNavHeight}}rpx;">
    <!-- 使用指南 -->
    <view class="card card-guide">
      <view class="card-title">使用指南</view>
      <view class="guide-list">
        <view 
          wx:for="{{guideList}}" 
          wx:key="id"
          class="guide-item">
          <view class="guide-title-row">
            <t-icon name="file-text" size="28rpx" color="#0052d9" />
            <text class="guide-title">{{item.title}}</text>
          </view>
          <text class="guide-text">{{item.content}}</text>
        </view>
      </view>
    </view>

    <!-- 联系方式 -->
    <view class="card card-contact">
      <view class="card-title">联系我们</view>
      <view class="contact-list">
        <view class="contact-item">
          <view class="contact-label">客服电话</view>
          <view class="contact-value">请通过小程序内联系功能联系我们</view>
        </view>
        <view class="contact-item">
          <view class="contact-label">工作时间</view>
          <view class="contact-value">周一至周五 9:00-18:00</view>
        </view>
      </view>
    </view>

    <!-- 底部安全区域 -->
    <view class="safe-area-bottom"></view>
  </scroll-view>
</view>

