<view class="page-container">
  <navigation-bar 
    title="财务记录"
    show-back="true"
    show-menu="false"
    show-record="false"
    fallback-url="/packageFinance/finance/finance"
    bind:back="goBack"
  />

  <scroll-view class="scroll-container" scroll-y style="padding-top: {{totalNavHeight}}rpx; height: calc(100vh - {{totalNavHeight}}rpx);">
    <!-- 筛选标签 -->
    <view class="filter-tabs">
      <view 
        wx:for="{{typeTabs}}" 
        wx:key="value"
        class="filter-tab {{currentType === item.value ? 'active' : ''}}"
        bind:tap="onTypeChange"
        data-type="{{item.value}}"
      >
        {{item.label}}
      </view>
    </view>

    <!-- 记录列表 -->
    <view class="records-list">
      <view 
        wx:for="{{displayRecords}}" 
        wx:key="id"
        class="record-item-card"
        bind:tap="viewRecordDetail"
        data-item="{{item}}"
      >
        <view class="record-left">
          <view class="record-content">
            <view class="record-title">{{item.title}}</view>
            <view class="record-desc">{{item.description}}</view>
            <view class="record-footer">
              <text class="record-time">{{item.date}}</text>
            </view>
          </view>
        </view>
        <view class="record-right">
          <view class="record-amount {{item.type}}">
            {{item.type === 'income' ? '+' : '-'}}¥{{item.amount}}
          </view>
        </view>
      </view>

      <!-- 空状态 -->
      <view wx:if="{{displayRecords.length === 0}}" class="empty-state">
        <text class="empty-text">暂无记录</text>
      </view>
    </view>
  </scroll-view>
  
  <!-- 交易详情弹窗组件 -->
  <finance-record-detail
    visible="{{showDetailPopup}}"
    record="{{selectedRecord}}"
    bind:close="closeDetailPopup"
  />
</view>

