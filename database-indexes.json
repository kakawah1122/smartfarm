{
  "数据库索引配置": "建议在微信云开发控制台中手动创建以下索引以优化查询性能",
  "indexes": {
    "users": [
      {"fields": ["_openid"], "unique": true},
      {"fields": ["role", "status"]},
      {"fields": ["createTime"], "order": "desc"}
    ],
    "health_records": [
      {"fields": ["userId", "createTime"], "order": "desc"},
      {"fields": ["batchNumber", "result"]},
      {"fields": ["diagnosisDisease", "severity"]},
      {"fields": ["recordDate"], "order": "desc"}
    ],
    "death_records": [
      {"fields": ["userId", "createTime"], "order": "desc"},
      {"fields": ["batchNumber", "deathDate"], "order": "desc"}
    ],
    "followup_records": [
      {"fields": ["healthRecordId", "createTime"], "order": "desc"},
      {"fields": ["batchNumber", "followupDate"], "order": "desc"}
    ],
    "entry_records": [
      {"fields": ["userId", "entryDate"], "order": "desc"},
      {"fields": ["batchNumber"], "unique": true},
      {"fields": ["status", "createTime"]}
    ],
    "exit_records": [
      {"fields": ["userId", "exitDate"], "order": "desc"},
      {"fields": ["batchNumber", "createTime"]}
    ],
    "notifications": [
      {"fields": ["type", "createTime"], "order": "desc"},
      {"fields": ["isGlobal", "createTime"]},
      {"fields": ["expireTime"]}
    ],
    "user_notifications": [
      {"fields": ["userOpenid", "createTime"], "order": "desc"},
      {"fields": ["userOpenid", "isRead"]},
      {"fields": ["notificationId"]}
    ],
    "ai_diagnosis_records": [
      {"fields": ["createdBy", "createTime"], "order": "desc"},
      {"fields": ["status", "confidence"]}
    ]
  }
}
